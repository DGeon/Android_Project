<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

<!--    <ImageView
        android:id="@+id/loginIv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logotext"
        android:layout_marginTop="-50dp"
        android:padding="30dp"
        />-->
    <TextView
        android:id="@+id/loginTvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보람말고 수당주세요"
        android:fontFamily="@font/basicfont"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textColor="@color/textcolor" />

    <ImageView
        android:id="@+id/loginIv"
        android:layout_width="wrap_content"
        android:layout_height="179dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:alpha="0.6"
        android:src="@drawable/loginbackground" />

    <EditText
        android:id="@+id/loginEtPhone"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:hint="핸드폰번호를 입력해주세요."
        android:textSize="12sp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:fontFamily="@font/basicfont"
        android:background="@drawable/editboxstyle" />

    <EditText
        android:layout_marginTop="10dp"
        android:id="@+id/loginEtPW"
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:hint="비밀번호를 입력해주세요."
        android:textSize="12sp"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:fontFamily="@font/basicfont"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/editboxstyle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <CheckBox
            android:id="@+id/loginCbAutologin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/basicfont"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:text="자동 로그인" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:gravity="center_horizontal"
        android:paddingRight="20dp">

        <Button
            android:id="@+id/loginBtnJoin"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@drawable/buttonradius"
            android:backgroundTint="#ECC270"
            android:layout_marginRight="30dp"
            android:fontFamily="@font/basicfont"
            android:textColor="#FFFFFF"
            android:onClick="onClick"
            android:text="회원가입"/>
        <Button
            android:id="@+id/loginBtnLogin"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/buttonradius"
            android:backgroundTint="#5F97DC"
            android:fontFamily="@font/basicfont"
            android:textColor="#FFFFFF"
            android:onClick="onClick"
            android:text="로그인"/>

    </LinearLayout>

</LinearLayout>